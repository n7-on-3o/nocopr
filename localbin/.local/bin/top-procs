#!/usr/bin/env bash

# Get Top 5 CPU Consumers
CPU_PROCS=$(ps -eo comm,%cpu --sort=-%cpu | head -n 6 | tail -n 5 | awk '{print $1 " (" $2 "%)"}')

# Get Top 5 Memory Consumers
MEM_PROCS=$(ps -eo comm,%mem --sort=-%mem | head -n 6 | tail -n 5 | awk '{print $1 " (" $2 "%)"}')

# Output as a Tooltip
echo "󰍛 Top CPU:\n$CPU_PROCS\n\n󰘚 Top Memory:\n$MEM_PROCS"
